<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/gameActivityMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:mapId="@string/map_id"
        android:visibility="gone"
        tools:context=".activities.GameActivity" />

    <RelativeLayout
        android:id="@+id/activeLevelLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        android:visibility="gone"
        android:padding="12dp"
        tools:layout_editor_absoluteY="278dp">

        <TextView
            android:id="@+id/timeCounter"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:minWidth="140dp"
            android:textColor="@color/black"
            android:textSize="60dp"></TextView>

        <ScrollView
            android:id="@+id/checkpointScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/timeCounter"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="30dp"
            android:paddingTop="12dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:id="@+id/checkpointList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/completedLevelLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:padding="12dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/treasureChest"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleX="1.8"
            android:scaleY="1.8"
            android:layout_centerInParent="true"
            app:lottie_fileName="treasure_chest.json"
            app:lottie_autoPlay="false"
            app:lottie_loop="false" />

        <ImageView
            android:id="@+id/itemIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />


        <com.example.lovci_pokladov.components.RoundedButton
            android:id="@+id/backToMapButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to Map"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
