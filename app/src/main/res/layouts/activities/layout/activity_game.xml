<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/gameActivityMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:mapId="@string/map_id"
        android:visibility="visible"
        tools:context=".activities.GameActivity" />

    <RelativeLayout
        android:id="@+id/activeGameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        android:visibility="gone"
        android:padding="12dp"
        tools:layout_editor_absoluteY="278dp">

        <LinearLayout
            android:id="@+id/checkpointInfo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:elevation="0dp"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/miniMap"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/rounded_background"
            android:layout_below="@id/checkpointInfo"
            android:orientation="vertical">

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/completedGameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:padding="12dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/treasureChest"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleX="1.8"
            android:scaleY="1.8"
            android:layout_centerInParent="true"
            app:lottie_fileName="treasure_chest.json"
            app:lottie_autoPlay="false"
            app:lottie_loop="false" />

        <ImageView
            android:id="@+id/itemIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />


        <com.example.city_tours.components.RoundedButton
            android:id="@+id/backToMapButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:visibility="gone" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
